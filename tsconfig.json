{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}